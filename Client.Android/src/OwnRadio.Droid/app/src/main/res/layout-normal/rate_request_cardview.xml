<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			   android:id="@+id/rateRequestLayout"
			android:visibility="visible">
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_view"
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="60dp"
		card_view:cardCornerRadius="4dp">
		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/rateRequestMessage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/rate_request_message"
				android:textAppearance="?android:attr/textAppearanceMedium"
				card_view:layout_constraintLeft_toLeftOf="parent"
				card_view:layout_constraintRight_toRightOf="parent"
				card_view:layout_constraintTop_toTopOf="parent"
				android:layout_marginTop="16dp"/>

			
			<Button
				android:id="@+id/btnRateCancel"
				android:text="Продолжить прослушивание"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:backgroundTint="@android:color/white"
				card_view:layout_constraintBottom_toBottomOf="parent"
				card_view:layout_constraintRight_toRightOf="parent"
				card_view:layout_constraintTop_toBottomOf="@+id/rateRequestMessage"
				card_view:layout_constraintVertical_bias="1.0"
				tools:layout_editor_absoluteX="303dp"
				tools:layout_editor_absoluteY="79dp"/>
		
		</android.support.constraint.ConstraintLayout>

	</android.support.v7.widget.CardView>

</LinearLayout>