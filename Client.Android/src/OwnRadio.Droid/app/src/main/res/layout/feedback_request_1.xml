<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
			   xmlns:card_view="http://schemas.android.com/apk/res-auto"
			   xmlns:tools="http://schemas.android.com/tools"
			   android:orientation="vertical"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:layout_centerHorizontal="true"
			   android:id="@+id/rateRequestLayout"
			   android:visibility="visible">
	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_view"
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="60dp"
		card_view:cardCornerRadius="4dp">
		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<Button
				android:id="@+id/btnRateCancel"
				android:text="Продолжить прослушивание"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="0dp"
				android:backgroundTint="@android:color/white"
				card_view:layout_constraintTop_toTopOf="parent"
				card_view:layout_constraintRight_toRightOf="parent"
				card_view:layout_constraintVertical_bias="1.0"
				/>
			
			<TextView
				android:id="@+id/feedback_request_message_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/feedback_request_message_1"
				android:textAppearance="?android:attr/textAppearanceMedium"
				card_view:layout_constraintLeft_toLeftOf="parent"
				card_view:layout_constraintRight_toRightOf="parent"
				card_view:layout_constraintTop_toBottomOf="@+id/btnRateCancel"
				android:layout_marginTop="16dp"/>
			
			<ImageButton
				android:id="@+id/vkButton"
				android:layout_width="196dp"
				android:layout_height="60dp"
				android:contentDescription="TODO" android:scaleType="fitXY"
				android:src="@drawable/vk"
				android:background="@android:color/transparent"
				tools:layout_editor_absoluteY="51dp"
				card_view:layout_constraintLeft_toLeftOf="parent"
				card_view:layout_constraintRight_toRightOf="parent"
				card_view:layout_constraintTop_toBottomOf="@+id/feedback_request_message_1"
				/>
			<TextView
				android:id="@+id/feedback_request_message_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:text="@string/feedback_request_message_2"
				android:textAppearance="?android:attr/textAppearanceMedium"
				card_view:layout_constraintLeft_toLeftOf="parent"
				card_view:layout_constraintRight_toRightOf="parent"
				card_view:layout_constraintTop_toBottomOf="@+id/vkButton"
				
				android:layout_marginTop="16dp"/>

		
		</android.support.constraint.ConstraintLayout>
	
	</android.support.v7.widget.CardView>

</LinearLayout>